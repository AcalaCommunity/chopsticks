		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
		"prettier": "^2.8.4",
		"vitest": "^0.28.3"
	},
	"prettier": {
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true
