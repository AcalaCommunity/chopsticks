{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "lib",
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts"],
	"references": [
		{ "path": "../core" },
	],
  "typedocOptions": {
    "entryPoints": ["src/types.ts"],
    "out": "../../docs-src/chopsticks",
    "plugin": "typedoc-plugin-markdown",
    "readme": "none",
  }
}
