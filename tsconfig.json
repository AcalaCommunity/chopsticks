{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"outDir": "lib",
		"sourceMap": true,
		"target": "esnext",
		"skipLibCheck": true,
		"strict": true
	},
	"exclude": ["node_modules", "vendor"]
}
