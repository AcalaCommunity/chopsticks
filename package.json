{
	"name": "@acala-network/chopsticks",
	"author": "Bryan Chen <xlchen1291@gmail.com>",
	"license": "Apache-2.0",
	"packageManager": "yarn@3.2.4",
	"workspaces": [
		"packages/*",
		"executor/pkg",
		"e2e"
	],
	"scripts": {
		"lint": "yarn workspaces foreach run lint",
		"fix": "yarn workspaces foreach run fix",
		"prepare": "husky install",
		"build": "yarn workspaces foreach run build",
		"build:watch": "yarn workspaces foreach run build:watch",
		"build-wasm": "wasm-pack build executor --target nodejs --scope acala-network",
		"build-wasm-logging": "yarn build-wasm --features=logging",
		"check": "cd executor && cargo check --locked",
		"test": "CI=true && yarn workspaces foreach run test",
		"start": "yarn workspace @acala-network/chopsticks-core run start",
		"dev": "yarn workspace @acala-network/chopsticks-core run dev",
		"dev:karura": "yarn workspace @acala-network/chopsticks-core run dev:karura",
		"dev:acala": "yarn workspace @acala-network/chopsticks-core run dev:acala",
		"dev:moonriver": "yarn workspace @acala-network/chopsticks-core run dev:moonriver",
		"dev:moonbeam": "yarn workspace @acala-network/chopsticks-core run dev:moonbeam"
	},
	"engines": {
		"node": ">=v14"
	},
	"prettier": {
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,ts,css,md}": "prettier --write"
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"wasm-pack": "^0.10.3"
	}
}
